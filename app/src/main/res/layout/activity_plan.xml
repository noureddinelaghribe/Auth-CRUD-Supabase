<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اختر خطتك"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose the plan that fits your needs"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- FREE PLAN -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/freePlanCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E0E0E0"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Plan Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Free"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/design_default_color_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/ month"
                            android:textSize="14sp"
                            android:textColor="#757575"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/selectFreePlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current"
                        android:enabled="false"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp"/>

                <!-- Features -->
                <TextView
                    android:id="@+id/freePlanFeatures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✔ Ads included"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BASIC PLAN -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/basicPlanCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/design_default_color_primary"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Popular Badge -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POPULAR"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@color/design_default_color_primary"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="8dp"/>

                <!-- Plan Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Basic"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$4.99"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/design_default_color_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/ month"
                            android:textSize="14sp"
                            android:textColor="#757575"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/selectBasicPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select"
                        android:backgroundTint="@color/design_default_color_primary"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp"/>

                <!-- Features -->
                <TextView
                    android:id="@+id/basicPlanFeatures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✔ 3,000 words / task"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- PRO PLAN -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/proPlanCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E0E0E0"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Plan Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pro"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$14.99"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/design_default_color_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/ month"
                            android:textSize="14sp"
                            android:textColor="#757575"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/selectProPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp"/>

                <!-- Features -->
                <TextView
                    android:id="@+id/proPlanFeatures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✔ 10,000 words / task"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ULTRA PLAN -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ultraPlanCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="#FFD700"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Best Value Badge -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEST VALUE"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#FFD700"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="8dp"/>

                <!-- Plan Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ultra"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$99.99"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#FFD700"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/ month"
                            android:textSize="14sp"
                            android:textColor="#757575"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/selectUltraPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select"
                        android:backgroundTint="#FFD700"
                        android:textColor="#000000"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp"/>

                <!-- Features -->
                <TextView
                    android:id="@+id/ultraPlanFeatures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✔ 50,000 words / task"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Footer Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All plans include a 7-day free trial. Cancel anytime."
            android:textSize="12sp"
            android:textColor="#757575"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"/>

        <!-- Subscriptions Header -->
        <TextView
            android:id="@+id/tvSubscriptionsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your subscriptions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Subscriptions RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSubscriptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingBottom="16dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>